<div class="row">
    <div class="panel-body" style="padding-bottom:0px;">
        <div class="panel panel-default">
            <div class="panel-heading">查询条件</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group" style="margin-top:15px">
                        <label class="control-label col-sm-1" for="select_worksection">所属工段</label>
                        <div class="col-sm-3">
                            <select id="select_worksection" class="dropdown form-control">
                                <option value="-1">请选择</option>
                            </select>
                        </div>

                        <label class="control-label col-sm-1" for="select_device">故障设备</label>
                        <div class="col-sm-3">
                            <select id="select_device" class="dropdown form-control">
                                <option value="-1">请选择</option>
                            </select>
                        </div>
                        <label class="control-label col-sm-1" for="txt_search_time">发生时间</label>
                        <div class='col-sm-3 input-group date' id='div_search_fssj'>
                            <input type='text' class="form-control" id="txt_search_fssj" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>

                        <div class="col-sm-3" style="text-align:right;">
                            <button type="button" id="btn_query" class="btn btn-primary" onclick="RefreshTable()">查询</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div>
        </div>
    </div>
    <table id="tb_departments"></table>
</div>

<script>
    $(function () {
        $('#div_search_fssj').datetimepicker({
            //日期格式化，只显示日期
            language: 'zh-CN',     //中文化
            todayBtn: true,
            pickerPosition: "bottom-left"
        });
        LoadWorkSectionName();
        $("#select_worksection").change(function () {
            LoadDeviceName();
        });
    });

    function LoadWorkSectionName() {
        $.post(
            "/Partial/GetWorkSectionNameList",
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").text(item["WorkSection"]).appendTo($("#select_worksection"));
                })
            });
    };

    function LoadDeviceName() {
        $("#select_device").empty();
        $("<option></option>").val("-1").text("请选择").appendTo($("#select_device"));

        $.post(
            "/Partial/GetDeviceNamesBySection",
            { sectionName: $("#select_worksection option:selected").text()},
            function (data) {
                $.each(data, function (i, item) {
                    $("<option></option>").val(item["DeviceNo"]).text(item["DeviceName"]).appendTo($("#select_device"));
                })
            });
    }
       
</script>
